apiVersion: apps/v1
kind: Deployment
metadata:
  name: claim-api
spec:
  replicas: 2
  selector:
    matchLabels:
      app: claim-api
  template:
    metadata:
      labels:
        app: claim-api
    spec:
      serviceAccountName: claim-api-sa
      containers:
        - name: claim-api
          image: 335444506576.dkr.ecr.us-east-1.amazonaws.com/claim-api:latest
          ports:
            - containerPort: 3000
          env:
            - name: AWS_REGION
              value: us-east-1
            - name: CLAIMS_TABLE
              value: claims
            - name: NOTES_BUCKET
              value: claim-notes-bucket
            - name: BEDROCK_MODEL_ID
              value: anthropic.claude-3-sonnet-20240229-v1:0
          readinessProbe:
            httpGet:
              path: /claims/health
              port: 3000
            initialDelaySeconds: 10
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /claims/health
              port: 3000
            initialDelaySeconds: 20
            periodSeconds: 20
